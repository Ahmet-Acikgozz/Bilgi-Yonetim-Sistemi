@model List<proje.Models.Entities.Student>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students of the Course</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Students Enrolled in the Course</h2>

        <ul>
            @foreach (var student in Model)
            {
                <li>
                    @student.First_Name @student.Last_Name
                    - <form method="post" action="/Instructor/ApproveCourse">
                        <input type="hidden" name="studentId" value="@student.Student_ID" />
                        <input type="hidden" name="courseId" value="@student.StudentCourses.FirstOrDefault().Course_ID" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                </li>
            }
        </ul>
    </div>
</body>
</html>