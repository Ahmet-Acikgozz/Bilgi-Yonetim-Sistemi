@model proje.Models.Entities.Instructor



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instructor Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Welcome, @Model.First_Name @Model.Last_Name</h2>

        <h4>Your Courses</h4>
        <ul>
            @foreach (var course in Model.Courses)
            {
                <li>
                    <a href="/Instructor/ViewStudents?courseId=@course.Course_ID">@course.Course_Name</a>
                </li>
            }
        </ul>
    </div>
 
</body>
</html>